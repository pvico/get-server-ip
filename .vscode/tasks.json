{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build --summary all"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build run -- $*", "--", "${input:progArgs}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "build-safe",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build --release=safe --summary all"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "build-small",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build --release=small --summary all"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "build-fast",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build --release=fast --summary all"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "progArgs",
      "type": "promptString",
      "description": "Arguments for cargo run",
      "default": "install"
    }
  ]
}
