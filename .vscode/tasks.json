{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "zsh",
      "args": ["-c", "clear && zig build run -- $*", "--", "${input:progArgs}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "run-fast",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-c",
        "clear && zig build run --release=fast -- $*",
        "--",
        "${input:progArgs}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "build-rpi5",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-c",
        "clear && zig build -Dtarget=aarch64-linux -Doptimize=ReleaseSmall --prefix zig-out/rpi5"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    },
    {
      "label": "build-rpi0",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-c",
        "clear && zig build -Dtarget=arm-linux-gnueabihf -Dcpu=arm1176jzf_s -Doptimize=ReleaseSmall --prefix zig-out/rpi0"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$rustc"
    }
  ],
  "inputs": [
    {
      "id": "progArgs",
      "type": "promptString",
      "description": "Arguments for cargo run",
      "default": "install"
    }
  ]
}
